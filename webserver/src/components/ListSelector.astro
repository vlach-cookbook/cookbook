---
interface Props {
  current: "recipes" | "ingredients" | "categories" | "history";
  // True if a user is logged in.
  hasUser: boolean;
}

const { current, hasUser } = Astro.props;
---

<style is:global>
  #kindOfListSelector {
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    align-items: stretch;
    width: 100%;
    padding: 0;
    margin-top: 0;
    margin-bottom: 1em;
  }
  #kindOfListSelector > a {
    flex: 1;
    padding: 1em;
    text-align: center;
    vertical-align: center;
    border: thin solid black;
  }
  #kindOfListSelector > a.selected {
    background-color: #eee;
  }
</style>

<nav id="kindOfListSelector">
  <a href={`/r`} class:list={{ selected: current === "recipes" }}>Recipes</a>
  <a href={`/ingredients`} class:list={{ selected: current === "ingredients" }}
    >Ingredients</a
  >
  <a href={`/categories`} class:list={{ selected: current === "categories" }}
    >Categories</a
  >
  {
    hasUser ? (
      <a href={`/history`} class:list={{ selected: current === "history" }}>
        History
      </a>
    ) : null
  }
</nav>
